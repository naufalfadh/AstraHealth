@model List<AstraHealth.Models.ObatModel>
@{
    ViewData["Title"] = "Keperluan Obat";
    int no = 1;
}
@{
    var httpContext = ViewContext.HttpContext;
}

<div class="pagetitle">
    <h1>Keperluan Obat</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Keperluan Obat</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Keperluan Obat</h5>
                    <hr />
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="row">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                    <a class="btn btn-primary" asp-action="Create">Tambah Keperluan Obat</a>
                    <p></p>
                    <table class="table datatable" id="myTable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">ID</th>
                                <th scope="col">Nama Obat</th>
                                <th scope="col">Jumlah</th>
                                <th scope="col">Tanggal Pengajuan</th>
                                <th scope="col">Status</th>
                                @if (httpContext.Session.GetString("Role") == "admin")
                                {
                                    <th scope="col">Tanggal Aksi</th>
                                }

                                @if (httpContext.Session.GetString("Role") == "manajer")
                                {
                                    <th scope="col">Aksi</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obat in Model)
                            {
                                <tr>
                                    <td>@(no++)</td>
                                    <td>@obat.kpo_id</td>
                                    <td>@obat.kpo_nama_obat</td>
                                    <td>@obat.kpo_jumlah</td>
                                    <td>@obat.kpo_tanggal_pengajuan</td>
                                    <td>@obat.kpo_status</td>
                                    <td>@obat.kpo_tanggal_aksi</td>

                                    @if (httpContext.Session.GetString("Role") == "manajer")
                                    {
                                        <td>
                                            <button class="btn btn-sm btn-danger delete-button" data-id="@obat.kpo_id">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <a asp-controller="akun" asp-action="Edit" asp-route-id="@obat.kpo_id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-info btn-info-modal" data-toggle="modal" data-target="#infoModal_@obat.kpo_id"><i class="fas fa-info-circle"></i></button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

    function togglePassword(button) {
        var input = $(button).closest('.input-group').find('input');
        var type = input.attr('type') === 'password' ? 'text' : 'password';
        input.attr('type', type);
        $(button).find('i').toggleClass('fa-eye fa-eye-slash');
    }

    $(document).ready(function () {
        $(".delete-button").click(function () {
            var akunId = $(this).data("id");

            swal({
                title: "Hapus akun?",
                text: "Apakah anda yakin ingin menghapus akun ini?",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: "/akun/Delete/" + akunId, // Perbaiki URL dengan menambahkan tanda "/"
                        type: "POST",
                        success: function (data) {
                            if (data.success) {
                                swal("Sukses!", data.message, "success");
                                location.reload();
                            } else {
                                swal("Gagal!", data.message, "error");
                            }
                        },
                        error: function () {
                            swal("Error", "Terjadi kesalahan saat menghapus akun.", "error");
                        }
                    });
                }
            });
        });
    });
</script>
