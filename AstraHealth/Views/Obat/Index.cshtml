@model List<AstraHealth.Models.ObatModel>
@{
    ViewData["Title"] = "Obat";
    int no = 1;
}
@{
    var httpContext = ViewContext.HttpContext;
}

<br>
<br>
<br>
<br>
<section class="section">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h2>Obat</h2>
                                <hr />
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="row">
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <i class="bi bi-check-circle me-1"></i>
                                            <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    </div>
                                }
                                @if (httpContext.Session.GetString("Role") == "admin")
                                {
                                    <a class="btn btn-primary btn-icon-text" asp-action="Create">
                                        <i class="mdi mdi-plus-circle-outline"></i>
                                        Tambah Obat
                                    </a>
                                    <a class="btn btn-success btn-icon-text" asp-action="Excel">
                                        <i class="mdi mdi-file-excel"></i>
                                        Impor Excel
                                    </a>
                                    <a class="btn btn-success btn-icon-text" id="printExcel">
                                        <i class="mdi mdi-file-excel"></i>
                                        Ekspor Excel
                                    </a>
                                    <hr />
                                }
                                <table class="table datatable table-bordered" id="myTable">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">Nama Obat</th>
                                            <th scope="col">Stok</th>
                                            <th scope="col">Satuan</th>
                                            <th scope="col">Tanggal Kadaluarsa</th>
                                            @if (httpContext.Session.GetString("Role") == "admin")
                                            {
                                                <th scope="col">Aksi</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var obat in Model)
                                        {
                                            <tr>
                                                <td>@(no++)</td>
                                                <td>@obat.obt_nama_obat</td>
                                                <td>@obat.obt_stok</td>
                                                <td>@obat.obt_satuan</td>
                                                <td>@obat.obt_tanggal_kadaluarsa.ToString("dd/MM/yyyy")</td>
                                                @if (httpContext.Session.GetString("Role") == "admin")
                                                {
                                                    <td>
                                                        <div class="btn-group">
                                                            <a asp-controller="obat" asp-action="Edit" asp-route-id="@obat.obt_id" class="btn btn-sm btn-primary">
                                                                <i class="mdi mdi-tooltip-edit"></i>
                                                            </a>
                                                            <button class="btn btn-sm btn-danger delete-button" data-id="@obat.obt_id">
                                                                <i class="mdi mdi-delete"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@{
    no = 1;
}

<table class="table table-bordered" id="exportTable" style="display: none">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Nama Obat</th>
            <th scope="col">Stok</th>
            <th scope="col">Satuan</th>
            <th scope="col">Tanggal Kadaluarsa</th>
            <th scope="col">Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obat in Model)
        {
            <tr>
                <td>@(no++)</td>
                <td>@obat.obt_nama_obat</td>
                <td>@obat.obt_stok</td>
                <td>@obat.obt_satuan</td>
                <td>@obat.obt_tanggal_kadaluarsa.ToString("dd/MM/yyyy")</td>
                <td>
                    <button class="btn btn-sm btn-danger delete-button" data-id="@obat.obt_id">
                        <i class="mdi mdi-delete"></i>
                    </button>
                    <a asp-controller="obat" asp-action="Edit" asp-route-id="@obat.obt_id" class="btn btn-sm btn-primary">
                        <i class="mdi mdi-tooltip-edit"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $("#printExcel").click(function () {
        // Ambil tabel dengan ID modalTable
        var table = document.getElementById("exportTable");

        // Dapatkan semua baris dari tabel
        var rows = table.querySelectorAll("tbody tr");

        // Buat array untuk menyimpan data
        var data = [];

        // Loop melalui setiap baris dan dapatkan data sel
        rows.forEach(function (row) {
            var rowData = [];
            row.querySelectorAll("td").forEach(function (cell) {
                rowData.push(cell.textContent.trim());
            });
            data.push(rowData);
        });

        // Buat objek workbook
        var ws = XLSX.utils.aoa_to_sheet([["No", "Nama Obat", "Stok", "Satuan", "Tanggal Kadaluarsa"]].concat(data));

        // Atur lebar kolom (contoh: kolom A diatur lebar 20)
        ws["!cols"] = [{ width: 10 }, { width: 20 }, { width: 10 }, { width: 10 }, { width: 20 }];
        
        // Buat objek workbook
        var wb = XLSX.utils.book_new();
        XLSX.utils.book_append_sheet(wb, ws, "Sheet1");

        // Simpan workbook ke file Excel
        XLSX.writeFile(wb, "data_obat.xlsx");
    });

    $(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Indonesian.json"
            }
        });
    });

    $(document).ready(function () {
        $(".delete-button").click(function () {
            var obatId = $(this).data("id");

            Swal.fire({
                title: "Hapus obat?",
                text: "Apakah anda yakin ingin menghapus obat ini?",
                icon: "warning",
                confirmButtonText: "Iya",
                showDenyButton: true,
                denyButtonText: "Tidak",
                dangerMode: true,
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/obat/Delete/" + obatId, // Perbaiki URL dengan menambahkan tanda "/"
                        type: "POST",
                        success: function (data) {
                            if (data.success) {
                                Swal.fire("Sukses!", data.message, "success").then(() => {
                                    // Refresh halaman setelah pengguna menekan tombol "OK"
                                    location.reload();
                                });
                            } else {
                                Swal.fire("Gagal!", data.message, "error");
                            }
                        },
                        error: function () {
                            swal("Error", "Terjadi kesalahan saat menghapus obat.", "error");
                        }
                    });
                }
            });
        });
    });
</script>
