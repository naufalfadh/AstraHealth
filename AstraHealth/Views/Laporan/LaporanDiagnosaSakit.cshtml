@model List<AstraHealth.Models.PasienModel>
@{
    ViewData["Title"] = "Pasien";
    int no = 1;
    int num = 1;
}

<head>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.0/html2pdf.bundle.min.js"></script>

</head>

<div class="pagetitle">
    <h1>Pasien</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Register</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <hr />
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="row">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                    <button class="btn btn-primary" style="background-color: #0059AB;" data-bs-toggle="modal" data-bs-target="#myModal">
                        Cetak PDF
                        <i class="fas fa-file-pdf"></i>
                    </button>

                    <p></p>
                    <!-- Tabel Utama -->
                    <table class="table datatable" id="myTable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">ID Pasien</th>
                                <th scope="col">Nama Pasien</th>
                                <th scope="col">Keluhan</th>
                                <th scope="col">Tensi</th>
                                <th scope="col">Diagnosa</th>
                                <th scope="col">Tanggal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pasien in Model)
                            {
                                <tr>
                                    <td>@no</td>
                                    <td>@pasien.anm_id_pasien</td>
                                    <td>@pasien.anm_nama_pasien</td>
                                    <td>@pasien.anm_keluhan</td>
                                    <td>@pasien.anm_tensi</td>
                                    <td>@pasien.anm_diagnosa</td>
                                    <td>@pasien.anm_tanggal</td>
                                </tr>
                                no++;
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title modal-lg d-flex justify-content-center align-items-center">Laporan Diagnosa Sakit</h2>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Tabel Modal -->
                    <table class="table datatable" id="myTable">
                        <thead style="background-color: #37003C; color: white;">
                            <p>tes</p>
                            <p>tes</p>

                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">ID Pasien</th>
                                <th scope="col">Nama Pasien</th>
                                <th scope="col">Diagnosa</th>
                                <th scope="col">Tanggal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pasien in Model)
                            {
                                <tr>
                                    <td scope="row">@num</td>
                                    <td scope="row">@pasien.anm_id_pasien</td>
                                    <td scope="row">@pasien.anm_nama_pasien</td>
                                    <td scope="row">@pasien.anm_diagnosa</td>
                                    <td scope="row">@pasien.anm_tanggal</td>
                                </tr>
                                num++;
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                    <button type="button" class="btn btn-secondary" onclick="printModalContentToPDF()">Cetak</button>
                </div>
            </div>
        </div>
    </div>

</section>



<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
