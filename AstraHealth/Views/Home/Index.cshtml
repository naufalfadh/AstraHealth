@model AstraHealth.Models.AkunModel
@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>AstraHealth Login</title>
    <link rel="stylesheet" href="~/content/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/content/vendors/base/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/content/css/style.css">
    <link rel="shortcut icon" href="~/content/images/favicon.png" />
    <style>
        body {
            background-image: url('content/images/IMG_Background.jpg');
            background-size:100%;
        }
        /* Gaya tambahan untuk header */
        header {
            top: 0;
            left: 0;
            right: 0;
            position: fixed;
            height: 70px;
            width: 100% !important;
            padding: 10px 20px 10px 20px;
            box-shadow: 0px 2px 0px 0px #EEE;
            background-color: white;
            z-index: 4;
        }
        

            header img {
                max-width: 150px; /* Lebar maksimum logo */
        }
        /* Gaya tambahan untuk footer */
        footer {
            background-color: #ffffff; /* Warna latar belakang footer */
            padding: 10px;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header>
        <img src="~/content/images/IMG_Logo.png" alt="logo">
    </header>
    <section class="section">
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            
                            <h2>LOGIN</h2>
                            <form method="post" action="Home/Login">
                                <div class="col-12">
                                    <label asp-for="akn_id" class="control-label">Nama Akun</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="akn_id" class="form-control form-control-lg border-left-0" placeholder="Username" required/>
                                    </div>
                                    <span asp-validation-for="akn_id" class="text-danger"></span>
                                </div>
                                <br>
                                <div class="col-12">
                                    <label asp-for="akn_password" class="control-label">Kata Sandi</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="akn_password" class="form-control form-control-lg border-left-0" type="password" id="passwordInput" placeholder="Password" required />
                                        <div class="input-group-append">
                                            <span class="input-group-text bg-light border-left-0">
                                                <i id="togglePassword" class="mdi mdi-eye-outline text-primary"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="akn_password" class="text-danger"></span>
                                </div>

                                <br>
                                <br>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Masuk</button>
                                </div>

                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["ErrorMessage"]
                                    </div>
                                }
                            </form>
                        </div>
                    </div>
                    <footer>
                        <p class="text-black font-weight-medium text-right flex-grow align-self-end">
                            Hak Cipta &copy; 2021 Semua hak dilindungi.
                        </p>
                    </footer>
                      
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    </section>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const passwordInput = document.getElementById('passwordInput');
            const togglePassword = document.getElementById('togglePassword');

            togglePassword.addEventListener('click', function () {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);

                // Ubah ikon berdasarkan status password
                togglePassword.classList.toggle('mdi-eye-outline', type === 'password');
                togglePassword.classList.toggle('mdi-eye-off-outline', type === 'text');
            });
        });
    </script>

    <!-- container-scroller -->
    <!-- base:js -->
    <script src="~/content/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/content/js/template.js"></script>
    <!-- endinject -->
    <!-- plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- Custom js for this page-->
    <!-- End custom js for this page-->

</body>

</html>
