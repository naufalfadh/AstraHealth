@model List<AstraHealth.Models.PasienModel>
@{
    ViewData["Title"] = "Pasien";
    int no = 1;
}

<div class="pagetitle">
    <h1>Pasien</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Register</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <hr />
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="row">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                    <a class="btn btn-primary" asp-action="Create">Anamnesa Pasien</a>
                    <p></p>
                    <table class="table datatable" id="myTable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">ID Pasien</th>
                                <th scope="col">Nama Pasien</th>
                                <th scope="col">Prodi atau Departemen</th>
                                <th scope="col">Keluhan</th>
                                <th scope="col">Tensi</th>
                                <th scope="col">Diagnosa</th>
                                <th scope="col">Obat</th>
                                <th scope="col">Jumlah</th>
                                <th scope="col">Satuan</th>
                                <th scope="col">Kecelakaan Kerja</th>
                                <th scope="col">Keterangan</th>
                                <th scope="col">Tanggal</th>
                                <th scope="col">ID Admin</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pasien in Model)
                            {
                                <tr>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@(no++)</td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_id_pasien</td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_nama_pasien</td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_prodi_atau_departemen</td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_keluhan</td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_tensi</td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_diagnosa</td>
                                    <td>
                                        @foreach (var pemakaianObat in pasien.PemakaianObats)
                                        {
                                            <div>
                                                @pemakaianObat.pmo_nama_obat
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @foreach (var pemakaianObat in pasien.PemakaianObats)
                                        {
                                            <div>
                                                @pemakaianObat.pmo_jumlah
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @foreach (var pemakaianObat in pasien.PemakaianObats)
                                        {
                                            <div>
                                                @pemakaianObat.pmo_satuan
                                            </div>
                                        }
                                    </td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_kecelakaan_kerja</td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_keterangan</td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_tanggal</td>
                                    <td rowspan="@(pasien.PemakaianObats.Count + 1)">@pasien.anm_id_admin</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
