@model AstraHealth.Models.PasienModel

@{
    ViewData["Title"] = "Registrasi Pasienz";
}
<style>
    body {
        padding-top: 100px; /* Atur spasi sesuai kebutuhan */
    }

    .input-with-border {
        border: 1px solid #ddd; /* Warna dan ketebalan garis tepi */
        border-radius: 4px; /* Bordes sudut */
    }

    .card {
        padding-left: 50px; /* Sesuaikan dengan jumlah padding yang diinginkan */
        padding-right: 50px; /* Sesuaikan dengan jumlah padding yang diinginkan */
    }

    .card-body {
        background-color: #f0f0f0; /* Ganti dengan warna yang diinginkan */
        padding: 20px; /* Sesuaikan dengan jumlah padding yang diinginkan */
        border-radius: 8px; /* Bordes sudut */
    }
</style>


<body>
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tambah Pasien Baru</h4>
                <form class="form-sample">
                    <p class="card-description">
                        Personal info
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_id_pasien" class="col-sm-3 col-form-label">ID Pasien</label>
                                <div class="col-sm-9">
                                    <input asp-for="rgs_id_pasien" class="form-control input-with-border" placeholder="Masukkan ID Pasien" />
                                    <span asp-validation-for="rgs_id_pasien" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_nama_pasien" class="col-sm-3 col-form-label">Nama Pasien</label>
                                <div class="col-sm-9">
                                    <input asp-for="rgs_nama_pasien" class="form-control input-with-border" placeholder="Masukkan Nama Pasien" />
                                    <span asp-validation-for="rgs_nama_pasien" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_prodi_atau_departemen" class="col-sm-3 col-form-label">Prodi atau Departemen</label>
                                <div class="col-sm-9">
                                    <input asp-for="rgs_prodi_atau_departemen" class="form-control input-with-border" placeholder="Masukkan Prodi / Departemen" />
                                    <span asp-validation-for="rgs_prodi_atau_departemen" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_keluhan" class="col-sm-3 col-form-label">Keluhan</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="rgs_keluhan" class="form-control input-with-border" placeholder="Masukkan Keluhan"></textarea>
                                    <span asp-validation-for="rgs_keluhan" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_tensi" class="col-sm-3 col-form-label">Tensi</label>
                                <div class="col-sm-9">
                                    <input asp-for="rgs_tensi" class="form-control input-with-border" placeholder="Masukkan Tensi" />
                                    <span asp-validation-for="rgs_tensi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_diagnosa" class="col-sm-3 col-form-label">Diagnosa</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="rgs_diagnosa" class="form-control input-with-border" placeholder="Masukkan Diagnosa"></textarea>
                                    <span asp-validation-for="rgs_diagnosa" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_obat" class="col-sm-3 col-form-label">Obat</label>
                                <div class="col-sm-9">
                                    <input asp-for="rgs_obat" class="form-control input-with-border" placeholder="Masukkan Nama Obat" />
                                    <span asp-validation-for="rgs_obat" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_jumlah_obat" class="col-sm-3 col-form-label">Jumlah Obat</label>
                                <div class="col-sm-9">
                                    <input asp-for="rgs_jumlah_obat" class="form-control input-with-border" placeholder="Masukkan Jumlah Obat" />
                                    <span asp-validation-for="rgs_jumlah_obat" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_kecelakaan_kerja" class="col-sm-3 col-form-label">Kecelakaan Kerja</label>
                                <div class="col-sm-9">
                                    <input asp-for="rgs_kecelakaan_kerja" class="form-control input-with-border" placeholder="Masukkan Kecelakaan Kerja" />
                                    <span asp-validation-for="rgs_kecelakaan_kerja" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_keterangan" class="col-sm-3 col-form-label">Keterangan</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="rgs_keterangan" class="form-control input-with-border" placeholder="Masukkan Keterangan"></textarea>
                                    <span asp-validation-for="rgs_keterangan" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_tanggal" class="col-sm-3 col-form-label">Tanggal</label>
                                <div class="col-sm-9">
                                    <input asp-for="rgs_tanggal" class="form-control input-with-border" placeholder="Masukkan Tanggal" />
                                    <span asp-validation-for="rgs_tanggal" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="rgs_id_admin" class="col-sm-3 col-form-label">ID Admin</label>
                                <div class="col-sm-9">
                                    <input asp-for="rgs_id_admin" class="form-control input-with-border" placeholder="Masukkan ID Admin" />
                                    <span asp-validation-for="rgs_id_admin" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-controller="Pasien" asp-action="Index" class="btn btn-light">Cancel</a>

                </form>
            </div>
        </div>
    </div>
</body>

