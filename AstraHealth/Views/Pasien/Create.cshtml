@model AstraHealth.Models.PasienModel

@{
    ViewData["Title"] = "Anamnesa Pasien";
}
@{
    var httpContext = ViewContext.HttpContext;
}
<style>
    .input-with-border {
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .card {
        padding-left: 50px;
        padding-right: 50px;
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .card-body {
        background-color: #f0f0f0;
        padding: 20px;
        border-radius: 8px;
    }

    .form-check {
        margin-left: 40px;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        text-align: center;
    }

    .title-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex-grow: 1;
    }
</style>

<br>
<br>
<br>
<br>
<section class="section">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-12 grid-margin ">
                        <div class="card">
                            <div class="card-body">
                                <h2>Anamnesa Pasien</h2>
                                <hr />
                                <form class="form-sample" method="post">
                                    <input asp-for="anm_id" class="form-control input-with-border" value="null" hidden />
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_id_pasien" class="col-sm-3 col-form-label">NIM atau NPK <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="id_pasien" style="color:red;display:none;">harus diisi</span>
                                                    <input asp-for="anm_id_pasien" id="anm_id_pasien" class="form-control input-with-border" placeholder="Masukkan ID Pasien" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_nama_pasien" class="col-sm-3 col-form-label">Nama Pasien <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="nama_pasien" style="color:red;display:none;">harus diisi</span>
                                                    <input asp-for="anm_nama_pasien" class="form-control input-with-border" placeholder="Masukkan Nama Pasien" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_prodi_atau_departemen" class="col-sm-3 col-form-label">Prodi atau Departemen <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="prodi_atau_departemen" style="color:red;display:none;">harus diisi</span>
                                                    <select asp-for="anm_prodi_atau_departemen" id="anm_prodi_atau_departemen" class="form-control form-control-lg">
                                                        <option value="" selected disabled>Pilih Prodi / Departemen</option>
                                                        <option value="Pembuatan Peralatan dan Perkakas Produksi">Pembuatan Peralatan dan Perkakas Produksi</option>
                                                        <option value="Teknik Produksi dan Proses Manufaktur">Teknik Produksi dan Proses Manufaktur</option>
                                                        <option value="Teknologi Konstruksi Bangunan Gedung">Teknologi Konstruksi Bangunan Gedung</option>
                                                        <option value="Mesin Otomotif">Mesin Otomotif</option>
                                                        <option value="Mekatronika">Mekatronika</option>
                                                        <option value="Manajemen Informatika">Manajemen Informatika</option>
                                                        <option value="Teknologi Rekayasa Pemeliharaan Alat Berat">Teknologi Rekayasa Pemeliharaan Alat Berat</option>
                                                        <option value="Teknologi Rekayasa Logistik">Teknologi Rekayasa Logistik</option>
                                                        <option value="DAAA">DAAA</option>
                                                        <option value="DKA">DKA</option>
                                                        <option value="DAKAP">DAKAP</option>
                                                        <option value="GA">GA</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_keluhan" class="col-sm-3 col-form-label">Keluhan <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="keluhan" style="color:red;display:none;">harus diisi</span>
                                                    <textarea asp-for="anm_keluhan" id="anm_keluhan" class="form-control input-with-border" placeholder="Masukkan Keluhan"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_tensi" class="col-sm-3 col-form-label">Tensi</label>
                                                <div class="col-sm-9">
                                                    <input asp-for="anm_tensi" class="form-control input-with-border" placeholder="Masukkan Tensi" value="" />
                                                    <span asp-validation-for="anm_tensi" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_diagnosa" class="col-sm-3 col-form-label">Diagnosa <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="diagnosa" style="color:red;display:none;">harus diisi</span>
                                                    <textarea asp-for="anm_diagnosa" id="anm_diagnosa" class="form-control input-with-border" placeholder="Masukkan Diagnosa"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <div class="col-sm-9">
                                                    <div class="form-check">
                                                        <input id="anm_kecelakaan_kerja_checkbox" name="anm_kecelakaan_kerja_checkbox" type="checkbox" class="form-check-input" />
                                                        <label class="form-check-label" for="anm_kecelakaan_kerja_checkbox">Kecelakaan Kerja</label>
                                                    </div>
                                                    <span asp-validation-for="anm_kecelakaan_kerja" class="text-danger"></span>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_keterangan" class="col-sm-3 col-form-label">Keterangan</label>
                                                <div class="col-sm-9">
                                                    <textarea asp-for="anm_keterangan" class="form-control input-with-border" placeholder="Masukkan Keterangan" value=""></textarea>
                                                    <span asp-validation-for="anm_keterangan" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <div class="col-sm-9">
                                                    <input asp-for="anm_tanggal" class="form-control input-with-border" placeholder="Masukkan Tanggal" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" hidden />
                                                    <span asp-validation-for="anm_tanggal" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <div class="col-sm-9">
                                                    <input asp-for="anm_id_admin" class="form-control input-with-border" placeholder="Masukkan ID Admin" value="@httpContext.Session.GetString("Id")" hidden />
                                                    <span asp-validation-for="anm_id_admin" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-control">Obat</label>
                                        <button type="button" id="btnTambahBaris" form="pasienForm" class="btn btn-primary">Tambah</button>
                                        <table id="tblPemakaianObat" class="table">
                                            <thead>
                                                <tr>
                                                    <th>Nama Obat</th>
                                                    <th>Jumlah</th>
                                                    <th>Satuan</th>
                                                    <th>Aksi</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                    <button type="submit" name="submitButton" value="submit" class="btn btn-primary mr-2 submit-button">Simpan</button>
                                    <button type="submit" name="submitButton" value="rujukan" class="btn btn-warning rujukan-button">Rujukan</button>
                                    <a asp-controller="Pasien" asp-action="Index" class="btn btn-light">Kembali</a>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div id="parentDiv">
                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                        <!-- Logo Container -->
                                        <div class="logo-container">
                                            <img src="~/content/images/IMG_Logo.png" alt="logo" style="width: 80px;" />
                                        </div>
                                        <!-- Title Wrapper -->
                                        <div class="title-wrapper">
                                            <h3 class="modal-title modal-lg" style="color: black;">SURAT KETERANGAN</h3>
                                            <h3 class="modal-title modal-lg" style="color: black;">PEMERIKSAAN KESEHATAN PASIEN</h3>
                                        </div>
                                        <!-- Another Logo Container -->
                                        <div class="logo-container">
                                            <img src="~/content/images/IMG_Logo.png" alt="logo" style="width: 80px;" />
                                        </div>
                                    </div>

                                    <!-- Modal Body -->
                                    <div class="modal-body">
                                        <!-- Patient Information -->
                                        <p style="color: black;">Nama: </p>
                                        <p style="color: black;">Dept/Prodi/UPT: </p>
                                        <p style="color: black;">NRP/NIM: </p>
                                        <br>

                                        <!-- Examination Results -->
                                        <p style="color: black;"><b>Hasil Pemersiksaan :</b></p>
                                        <p style="color: black;">Mengalami gejala</p>
                                        <br>
                                        <br>
                                        <p style="color: black;">Setelah dilakukan pemeriksaan, Pasien disarankan untuk pulang dan istirahat selama (Satu) Hari</p>
                                        <br>
                                        <p style="color: black;">Demikian hasil pemeriksaan ini dibuat untuk dapat digunakan sebagaimana mestinya</p>

                                        <!-- Date of the Letter -->
                                        <div class="tanggal-surat-wrapper">
                                            <p id="tanggalSurat" style="text-align: left; margin-right: 80px; color: black;">Cikarang: [Tanggal]</p>
                                        </div>
                                        <br>

                                        <!-- Signature and Name -->
                                        <div class="logo-container">
                                            <img src="~/content/images/Tanda_tangan.jpg" alt="logo" id="tandaTanganImage" style="width: 60px;" />
                                        </div>
                                        <p style="color: black;">Dina Yuliana Amd.Keb</p>
                                    </div>

                                    <!-- Modal Footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                                        <button type="button" class="btn btn-secondary" id="printPdf">Cetak</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $("#printPdf").click(function () {
        var element = document.getElementById('parentDiv');

        // Mendapatkan nilai dari field-field yang ada di form
        var namaPasien = $("input[name='anm_nama_pasien']").val() || '';
        var prodiDepartemen = $("select[name='anm_prodi_atau_departemen'] option:selected").text() || '';
        var idPasien = $("input[name='anm_id_pasien']").val() || '';
        var diagnosa = $("textarea[name='anm_diagnosa']").val() || '';

        // Mendapatkan tanggal saat ini dan formatnya ke "dd/MMM/yyyy"
        var today = new Date();
        var options = { day: '2-digit', month: 'short', year: 'numeric' };
        var tanggalSurat = today.toLocaleDateString('id-ID', options); // Format tanggal

        document.getElementById('tanggalSurat').textContent = "Cikarang: " + tanggalSurat;

        // Generate teks untuk dimasukkan ke dalam modal-body
        var modalText = `<p style="color: black;">Nama:      ${namaPasien}</p>
                            <p style="color: black;">Dept/Prodi/UPT:     ${prodiDepartemen}</p>
                            <p style="color: black;">NRP/NIM:     ${idPasien}</p>
                            <br>
                            <p style="color: black;"><b>Hasil Pemersiksaan :</b></p>
                            <p style="color: black;">Mengalami gejala ${diagnosa}</p>
                            <br>
                            <br>
                            <p style="color: black;">Setelah dilakukan pemeriksaan Pasien disarankan untuk pulang dan istirahat</p>
                            <p style="color: black;">Selama (Satu) Hari</p>
                            <br>
                            <p style="color: black;">Demikian hasil pemeriksaan ini dibuat untuk dapat digunakan sebagaimana mestinya</p>
                            <div class="tanggal-surat-wrapper">
                                <p id="tanggalSurat" style="text-align: left; margin-right: 80px; color: black;">Cikarang: ${tanggalSurat}</p>
                            </div>
                            <br>
                            <div class="logo-container">
                                <img src="~/content/images/Tanda_tangan.jpg" alt="logo" id="tandaTanganImage"/>
                            </div>
                            <p style="color: black;">Dina Yuliana Amd.Keb</p>`;

        // Mengganti isi dari modal-body dengan teks yang telah disiapkan
        $('.modal-body').html(modalText);

        // Generate PDF
        html2pdf().from(element).set({
            margin: 5,
            filename: 'Surat Izin.pdf',
            html2canvas: { scale: 2 },
            jsPDF: { format: 'a4' }
        }).save();
    });


    $(document).ready(function () {
        var index = 0;

        $("#btnTambahBaris").click(function () {
            var newRow = $("<tr>");
            var cols = "";

            cols += '<td><input name="PemakaianObats[' + index + '].pmo_nama_obat" class="form-control" /></td>';
            cols += '<td><input name="PemakaianObats[' + index + '].pmo_jumlah" class="form-control" type="number" /></td>';
            cols += '<td>' +
                '<select name="PemakaianObats[' + index + '].pmo_satuan" class="form-control form-control-lg">' +
                '<option value="" selected disabled>Pilih Satuan Obat</option>' +
                '<option value="buah">Buah</option>' +
                '<option value="kotak">Kotak</option>' +
                '<option value="strip">Strip</option>' +
                '<option value="botol">Botol</option>' +
                '<option value="vial">Vial</option>' +
                '<option value="ampul">Ampul</option>' +
                '<option value="tube">Tube</option>' +
                '<option value="paket">Paket</option>' +
                '<option value="dus">Dus</option>' +
                '<option value="sachet">Sachet</option>' +
                '<option value="plat">Plat</option>' +
                '</select>' +
                '</td>';

            cols += '<td>';
            cols += '<input name="PemakaianObats[' + index + '].pmo_id" class="form-control input-with-border" value="null" hidden />';
            cols += '<input name="PemakaianObats[' + index + '].pmo_id_anamnesa" class="form-control input-with-border" value="null" hidden />';
            cols += '<button type="button" class="btnHapusBaris btn btn-danger">Hapus</button>';
            cols += '</td>';

            newRow.append(cols);
            $("#tblPemakaianObat tbody").append(newRow);

            index++;
        });

        $("#tblPemakaianObat").on("click", ".btnHapusBaris", function () {
            $(this).closest("tr").remove();
        });

        $(".submit-button").click(function (e) {
            e.preventDefault(); // Mencegah pengiriman formulir secara default
            var buttonValue = $(this).val();
            $("input[name='submitButton']").val(buttonValue);

            if (validateForm()) {
                Swal.fire({
                    title: "Surat Izin?",
                    text: "Buat Surat Izin?",
                    icon: "question",
                    confirmButtonText: "Iya",
                    showDenyButton: true,
                    denyButtonText: "Tidak",
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Jika "Iya" diklik, tampilkan modal
                        $('#myModal').modal('show');
                    } else {
                        // Jika "Tidak" diklik, kirim formulir
                        $('form').append('<input type="hidden" name="submitButton" value="submit" />');
                        $('form').submit();
                    }
                });
            }
        });

        $(".rujukan-button").click(function (e) {
            e.preventDefault(); // Mencegah pengiriman formulir secara default
            $('input[name="submitButton"]').val("rujukan");

            if (validateForm()) {
                $('form').append('<input type="hidden" name="submitButton" value="rujukan" />');
                $('form').submit();
            }
        });

        $("#myModal").on("hidden.bs.modal", function () {
            // Jika modal ditutup, lanjutkan menyimpan data
            $('form').append('<input type="hidden" name="submitButton" value="submit" />');
            $('form').submit();
        });

        function validateForm() {
            document.getElementById('id_pasien').style.display = 'none';
            document.getElementById('nama_pasien').style.display = 'none';
            document.getElementById('prodi_atau_departemen').style.display = 'none';
            document.getElementById('keluhan').style.display = 'none';
            document.getElementById('diagnosa').style.display = 'none';

            var anm_id_pasien = document.getElementById('anm_id_pasien').value;
            var anm_nama_pasien = document.getElementById('anm_nama_pasien').value;
            var anm_prodi_atau_departemen = document.getElementById('anm_prodi_atau_departemen').value;
            var anm_keluhan = document.getElementById('anm_keluhan').value;
            var anm_diagnosa = document.getElementById('anm_diagnosa').value;

            if (!anm_id_pasien.trim()) {
                document.getElementById('id_pasien').style.display = 'inline';
            }
            if (!anm_nama_pasien.trim()) {
                document.getElementById('nama_pasien').style.display = 'inline';
            }
            if (!anm_prodi_atau_departemen.trim()) {
                document.getElementById('prodi_atau_departemen').style.display = 'inline';
            }
            if (!anm_keluhan.trim()) {
                document.getElementById('keluhan').style.display = 'inline';
            }
            if (!anm_diagnosa.trim()) {
                document.getElementById('diagnosa').style.display = 'inline';
            }

            // Ganti dengan nama kolom yang sesuai
            var requiredFields = ["anm_id_pasien", "anm_nama_pasien", "anm_prodi_atau_departemen", "anm_keluhan", "anm_diagnosa", "anm_prodi_atau_departemen"];
    
            // Array untuk menyimpan pesan kesalahan obat
            var obatErrors = [];

            for (var i = 0; i < requiredFields.length; i++) {
                var field = requiredFields[i];
                var value = $("#" + field).val();
                if (!value) {
                    Swal.fire("Gagal!", "Isi data dengan lengkap!", "warning");
                    return false;
                }
            }

            // Validasi obat
            var obatRows = $("#tblPemakaianObat tbody tr");
            obatRows.each(function(index, row) {
                var namaObat = $(row).find("input[name$='pmo_nama_obat']").val();
                var jumlah = $(row).find("input[name$='pmo_jumlah']").val();
                var satuan = $(row).find("select[name$='pmo_satuan']").val();

                if (!namaObat || !jumlah || !satuan) {
                    obatErrors.push("Isi data obat dengan lengkap pada baris " + (index + 1));
                }
            });

            // Menampilkan pesan kesalahan obat jika ada
            if (obatErrors.length > 0) {
                Swal.fire("Gagal!", obatErrors.join("<br>"), "warning");
                return false;
            }

            return true;
        }
    });

    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById("anm_id_pasien").addEventListener("blur", function (event) {
            // Reset previous error messages
            var idPasienError = document.getElementById('id_pasien');
            idPasienError.style.display = 'none';

            // Check username
            var anm_id_pasien = this.value.trim();

            if (!anm_id_pasien) {
                idPasienError.textContent = 'harus diisi';
                idPasienError.style.display = 'inline';
            }
        });

        document.getElementById("anm_nama_pasien").addEventListener("blur", function (event) {
            // Reset previous error messages
            var namaPasienError = document.getElementById('nama_pasien');
            namaPasienError.style.display = 'none';

            // Check username
            var anm_nama_pasien = this.value.trim();

            if (!anm_nama_pasien) {
                namaPasienError.textContent = 'harus diisi';
                namaPasienError.style.display = 'inline';
            }
        });

        document.getElementById("anm_prodi_atau_departemen").addEventListener("blur", function (event) {
            // Reset previous error messages
            var prodiAtauDepartemenError = document.getElementById('prodi_atau_departemen');
            prodiAtauDepartemenError.style.display = 'none';

            // Check username
            var anm_prodi_atau_departemen = this.value.trim();

            if (!anm_prodi_atau_departemen) {
                prodiAtauDepartemenError.textContent = 'harus diisi';
                prodiAtauDepartemenError.style.display = 'inline';
            }
        });

        document.getElementById("anm_keluhan").addEventListener("blur", function (event) {
            // Reset previous error messages
            var keluhanError = document.getElementById('keluhan');
            keluhanError.style.display = 'none';

            // Check username
            var anm_keluhan = this.value.trim();

            if (!anm_keluhan) {
                keluhanError.textContent = 'harus diisi';
                keluhanError.style.display = 'inline';
            }
        });

        document.getElementById("anm_diagnosa").addEventListener("blur", function (event) {
            // Reset previous error messages
            var diagnosaError = document.getElementById('diagnosa');
            diagnosaError.style.display = 'none';

            // Check username
            var anm_diagnosa = this.value.trim();

            if (!anm_diagnosa) {
                diagnosaError.textContent = 'harus diisi';
                diagnosaError.style.display = 'inline';
            }
        });
    });
</script>
