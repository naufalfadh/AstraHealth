@model AstraHealth.Models.PasienModel

@{
    ViewData["Title"] = "Anamnesa Pasien";
}
@{
    var httpContext = ViewContext.HttpContext;
}

<style>
    .input-with-border {
        border: 1px solid #ddd; /* Warna dan ketebalan garis tepi */
        border-radius: 4px; /* Bordes sudut */
    }


    .card {
        padding-left: 50px; /* Sesuaikan dengan jumlah padding yang diinginkan */
        padding-right: 50px; /* Sesuaikan dengan jumlah padding yang diinginkan */
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .card-body {
        background-color: #f0f0f0; /* Ganti dengan warna yang diinginkan */
        padding: 20px; /* Sesuaikan dengan jumlah padding yang diinginkan */
        border-radius: 8px; /* Bordes sudut */
    }

    .form-check{
        margin-left:40px;
    }
</style>

<br>
<br>
<br>
<br>
<section class="section">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-12 grid-margin ">
                        <div class="card">
                            <div class="card-body">
                                <h2>Anamnesa Pasien</h2>
                                <hr />
                                <form class="form-sample" method="post">
                                    <input asp-for="anm_id" class="form-control input-with-border" value="null" hidden />
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_id_pasien" class="col-sm-3 col-form-label">NIM atau NPK</label>
                                                <div class="col-sm-9">
                                                    <input asp-for="anm_id_pasien" class="form-control input-with-border" placeholder="Masukkan ID Pasien" />
                                                    <span asp-validation-for="anm_id_pasien" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_nama_pasien" class="col-sm-3 col-form-label">Nama Pasien</label>
                                                <div class="col-sm-9">
                                                    <input asp-for="anm_nama_pasien" class="form-control input-with-border" placeholder="Masukkan Nama Pasien" />
                                                    <span asp-validation-for="anm_nama_pasien" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_prodi_atau_departemen" class="col-sm-3 col-form-label">Prodi atau Departemen</label>
                                                <div class="col-sm-9">
                                                    <select asp-for="anm_prodi_atau_departemen" class="form-control input-with-border">
                                                        <option value="" selected disabled>Pilih Prodi / Departemen</option>
                                                        <option value="Pembuatan Peralatan dan Perkakas Produksi">Pembuatan Peralatan dan Perkakas Produksi</option>
                                                        <option value="Teknik Produksi dan Proses Manufaktur">Teknik Produksi dan Proses Manufaktur</option>
                                                        <option value="Teknologi Konstruksi Bangunan Gedung">Teknologi Konstruksi Bangunan Gedung</option>
                                                        <option value="Mesin Otomotif">Mesin Otomotif</option>
                                                        <option value="Mekatronika">Mekatronika</option>
                                                        <option value="Manajemen Informatika">Manajemen Informatika</option>
                                                        <option value="Teknologi Rekayasa Pemeliharaan Alat Berat">Teknologi Rekayasa Pemeliharaan Alat Berat</option>
                                                        <option value="Teknologi Rekayasa Logistik">Teknologi Rekayasa Logistik</option>
                                                        <option value="DAAA">DAAA</option>
                                                        <option value="DKA">DKA</option>
                                                        <option value="DAKAP">DAKAP</option>
                                                        <option value="GA">GA</option>
                                                    </select>
                                                    <span asp-validation-for="anm_prodi_atau_departemen" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_keluhan" class="col-sm-3 col-form-label">Keluhan</label>
                                                <div class="col-sm-9">
                                                    <textarea asp-for="anm_keluhan" class="form-control input-with-border" placeholder="Masukkan Keluhan"></textarea>
                                                    <span asp-validation-for="anm_keluhan" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_tensi" class="col-sm-3 col-form-label">Tensi</label>
                                                <div class="col-sm-9">
                                                    <input asp-for="anm_tensi" class="form-control input-with-border" placeholder="Masukkan Tensi" value="" />
                                                    <span asp-validation-for="anm_tensi" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_diagnosa" class="col-sm-3 col-form-label">Diagnosa</label>
                                                <div class="col-sm-9">
                                                    <textarea asp-for="anm_diagnosa" class="form-control input-with-border" placeholder="Masukkan Diagnosa"></textarea>
                                                    <span asp-validation-for="anm_diagnosa" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <div class="col-sm-9">
                                                    <div class="form-check">
                                                        <input id="anm_kecelakaan_kerja_checkbox" name="anm_kecelakaan_kerja_checkbox" type="checkbox" class="form-check-input" />
                                                        <label class="form-check-label" for="anm_kecelakaan_kerja_checkbox">Kecelakaan Kerja</label>
                                                    </div>
                                                    <span asp-validation-for="anm_kecelakaan_kerja" class="text-danger"></span>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_keterangan" class="col-sm-3 col-form-label">Keterangan</label>
                                                <div class="col-sm-9">
                                                    <textarea asp-for="anm_keterangan" class="form-control input-with-border" placeholder="Masukkan Keterangan" value=""></textarea>
                                                    <span asp-validation-for="anm_keterangan" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <div class="col-sm-9">
                                                    <input asp-for="anm_tanggal" class="form-control input-with-border" placeholder="Masukkan Tanggal" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" hidden />
                                                    <span asp-validation-for="anm_tanggal" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <div class="col-sm-9">
                                                    <input asp-for="anm_id_admin" class="form-control input-with-border" placeholder="Masukkan ID Admin" value="@httpContext.Session.GetString("Id")" hidden />
                                                    <span asp-validation-for="anm_id_admin" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-control">Obat</label>
                                        <button type="button" id="btnTambahBaris" form="pasienForm" class="btn btn-primary">Tambah</button>
                                        <table id="tblPemakaianObat" class="table">
                                            <thead>
                                                <tr>
                                                    <th>Nama Obat</th>
                                                    <th>Jumlah</th>
                                                    <th>Satuan</th>
                                                    <th>Aksi</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                    <button type="submit" name="submitButton" value="submit" class="btn btn-primary mr-2 submit-button">Simpan</button>
                                    <button type="submit" name="submitButton" value="rujukan" class="btn btn-primary mr-2 rujukan-button">Rujukan</button>
                                    <a asp-controller="Pasien" asp-action="Index" class="btn btn-light">Kembali</a>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h2 class="modal-title modal-lg d-flex justify-content-center align-items-center">Laporan Diagnosa Sakit</h2>
                                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body" id="parentDiv">
                                    <!-- Tabel Modal -->
                                    <table class="table datatable" id="myTable">
                                        <thead style="background-color: #37003C; color: white;">
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                                    <button type="button" class="btn btn-secondary" id="printPdf">Cetak</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Modal -->
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        var index = 0;

        $("#btnTambahBaris").click(function () {
            var newRow = $("<tr>");
            var cols = "";

            cols += '<td><input name="PemakaianObats[' + index + '].pmo_nama_obat" class="form-control" /></td>';
            cols += '<td><input name="PemakaianObats[' + index + '].pmo_jumlah" class="form-control" type="number" /></td>';
            cols += '<td>' +
                '<select name="PemakaianObats[' + index + '].pmo_satuan" class="form-control input-with-border">' +
                '<option value="" selected disabled>Pilih Satuan Obat</option>' +
                '<option value="buah">Buah</option>' +
                '<option value="kotak">Kotak</option>' +
                '<option value="strip">Strip</option>' +
                '<option value="botol">Botol</option>' +
                '<option value="vial">Vial</option>' +
                '<option value="ampul">Ampul</option>' +
                '<option value="tube">Tube</option>' +
                '<option value="paket">Paket</option>' +
                '<option value="dus">Dus</option>' +
                '<option value="sachet">Sachet</option>' +
                '<option value="plat">Plat</option>' +
                '</select>' +
                '</td>';

            cols += '<td>';
            cols += '<input name="PemakaianObats[' + index + '].pmo_id" class="form-control input-with-border" value="null" hidden />';
            cols += '<input name="PemakaianObats[' + index + '].pmo_id_anamnesa" class="form-control input-with-border" value="null" hidden />';
            cols += '<button type="button" class="btnHapusBaris btn btn-danger">Hapus</button>';
            cols += '</td>';

            newRow.append(cols);
            $("#tblPemakaianObat tbody").append(newRow);

            index++;
        });

        $("#tblPemakaianObat").on("click", ".btnHapusBaris", function () {
            $(this).closest("tr").remove();
        });

        $(".submit-button").click(function (e) {
            e.preventDefault(); // Mencegah pengiriman formulir secara default
            var buttonValue = $(this).val();
            $("input[name='submitButton']").val(buttonValue);

            if (validateForm()) {
                Swal.fire({
                    title: "Surat Izin?",
                    text: "Buat Surat Izin?",
                    icon: "question",
                    confirmButtonText: "Iya",
                    showDenyButton: true,
                    denyButtonText: "Tidak",
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Jika "Iya" diklik, tampilkan modal
                        $('#myModal').modal('show');
                    } else {
                        // Jika "Tidak" diklik, kirim formulir
                        $('form').append('<input type="hidden" name="submitButton" value="submit" />');
                        $('form').submit();
                    }
                });
            }
        });

        $(".rujukan-button").click(function (e) {
            e.preventDefault(); // Mencegah pengiriman formulir secara default
            $('input[name="submitButton"]').val("rujukan");

            if (validateForm()) {
                $('form').append('<input type="hidden" name="submitButton" value="rujukan" />');
                $('form').submit();
            }
        });

        $("#myModal").on("hidden.bs.modal", function () {
            // Jika modal ditutup, lanjutkan menyimpan data
            $('form').append('<input type="hidden" name="submitButton" value="submit" />');
            $('form').submit();
        });

        function validateForm() {
            // Ganti dengan nama kolom yang sesuai
            var requiredFields = ["anm_id_pasien", "anm_nama_pasien", "anm_prodi_atau_departemen", "anm_keluhan", "anm_diagnosa", "anm_prodi_atau_departemen"];
    
            // Array untuk menyimpan pesan kesalahan obat
            var obatErrors = [];

            for (var i = 0; i < requiredFields.length; i++) {
                var field = requiredFields[i];
                var value = $("#" + field).val();
                if (!value) {
                    Swal.fire("Gagal!", "Isi data dengan lengkap!", "warning");
                    return false;
                }
            }

            // Validasi obat
            var obatRows = $("#tblPemakaianObat tbody tr");
            obatRows.each(function(index, row) {
                var namaObat = $(row).find("input[name$='pmo_nama_obat']").val();
                var jumlah = $(row).find("input[name$='pmo_jumlah']").val();
                var satuan = $(row).find("select[name$='pmo_satuan']").val();

                if (!namaObat || !jumlah || !satuan) {
                    obatErrors.push("Isi data obat dengan lengkap pada baris " + (index + 1));
                }
            });

            // Menampilkan pesan kesalahan obat jika ada
            if (obatErrors.length > 0) {
                Swal.fire("Gagal!", obatErrors.join("<br>"), "warning");
                return false;
            }

            return true;
        }
    });


    $("#printPdf").click(function () {
        var element = document.getElementById('parentDiv');

        //generate pdf
        html2pdf().from(element).set({
            margin: [30, 10, 5, 10],
            pagebreak: { avoid: 'tr' },
            jsPDF: { orientation: 'landscape', unit: 'pt', format: 'letter', compressPDF: true }
        }).save()

    });
</script>
