<section class="section">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h2>Anamnesa Pasien</h2>
                                <hr />
                                <h3 class="card-title">Data Pasien</h3>
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="row">
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <i class="bi bi-check-circle me-1"></i>
                                            <strong>@TempData["ErrorMessage"]</strong>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    </div>
                                }
                                <form class="form-sample" method="post">
                                    <input asp-for="anm_id" class="form-control input-with-border" value="null" hidden />
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_id_pasien" class="col-sm-3 col-form-label">NIM atau NPK <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="id_pasien" style="color:red;display:none;">harus diisi</span>
                                                    <input asp-for="anm_id_pasien" id="anm_id_pasien" type="number" class="form-control input-with-border" placeholder="Masukkan ID Pasien" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_nama_pasien" class="col-sm-3 col-form-label">Nama Pasien <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="nama_pasien" style="color:red;display:none;">harus diisi</span>
                                                    <input asp-for="anm_nama_pasien" id="anm_nama_pasien" class="form-control input-with-border" placeholder="Masukkan Nama Pasien" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_prodi_atau_departemen" class="col-sm-3 col-form-label">Prodi atau Departemen <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="prodi_atau_departemen" style="color:red;display:none;">harus diisi</span>
                                                    <select asp-for="anm_prodi_atau_departemen" id="anm_prodi_atau_departemen" class="form-control form-control-lg">
                                                        <option value="" selected disabled>Pilih Prodi / Departemen</option>
                                                        <option value="Pembuatan Peralatan dan Perkakas Produksi">Pembuatan Peralatan dan Perkakas Produksi</option>
                                                        <option value="Teknik Produksi dan Proses Manufaktur">Teknik Produksi dan Proses Manufaktur</option>
                                                        <option value="Manajemen Informatika">Manajemen Informatika</option>
                                                        <option value="Mesin Otomotif">Mesin Otomotif</option>
                                                        <option value="Mekatronika">Mekatronika</option>
                                                        <option value="Teknologi Konstruksi Bangunan Gedung">Teknologi Konstruksi Bangunan Gedung</option>
                                                        <option value="Teknologi Rekayasa Pemeliharaan Alat Berat">Teknologi Rekayasa Pemeliharaan Alat Berat</option>
                                                        <option value="Teknologi Rekayasa Logistik">Teknologi Rekayasa Logistik</option>
                                                        <option value="DAAA">DAAA</option>
                                                        <option value="DKA">DKA</option>
                                                        <option value="DAKAP">DAKAP</option>
                                                        <option value="GA">GA</option>
                                                        <option value="Sigap(vendor)">Sigap(vendor)</option>
                                                        <option value="Virtus(vendor)">Virtus(vendor)</option>
                                                        <option value="lainnya">Lainnya</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr />
                                    <h3 class="card-title">Data Kesehatan Pasien</h3>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_keluhan" class="col-sm-3 col-form-label">Keluhan <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="keluhan" style="color:red;display:none;">harus diisi</span>
                                                    <textarea asp-for="anm_keluhan" id="anm_keluhan" class="form-control input-with-border" placeholder="Masukkan Keluhan"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label asp-for="anm_diagnosa" class="col-sm-3 col-form-label">Diagnosa <span style="color:red">*</span></label>
                                                <div class="col-sm-9">
                                                    <span id="diagnosa" style="color:red;display:none;">harus diisi</span>
                                                    <textarea asp-for="anm_diagnosa" id="anm_diagnosa" class="form-control input-with-border" placeholder="Masukkan Diagnosa"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
												<label asp-for="anm_keterangan" class="col-sm-3 col-form-label">Keterangan</label>
												<div class="col-sm-9">
													<textarea asp-for="anm_keterangan" class="form-control input-with-border" placeholder="Masukkan Keterangan" value=""></textarea>
												</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <div class="col-sm-9">
                                                    <div class="form-check" style="margin-left: 5%">
                                                        <input id="anm_kecelakaan_kerja_checkbox" name="anm_kecelakaan_kerja_checkbox" type="checkbox" class="form-check-input" />
                                                        <label class="form-check-label" for="anm_kecelakaan_kerja_checkbox">Kecelakaan Kerja</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input asp-for="anm_tanggal" class="form-control input-with-border" placeholder="Masukkan Tanggal" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" hidden />
                                    <input asp-for="anm_id_admin" class="form-control input-with-border" placeholder="Masukkan ID Admin" value="@httpContext.Session.GetString("Id")" hidden />
                                    <hr />
                                    <h3 class="card-title">Obat</h3>
                                    <div class="form-group">
                                        <button type="button" id="btnTambahBaris" form="pasienForm" class="btn btn-primary">Tambah</button>
                                        <table id="tblPemakaianObat" class="table">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Nama Obat
                                                        <span id="1" style="color:red;display:none;"> *</span>
                                                        <span id="nama_obat" style="color:red;display:none;">harus diisi</span>
                                                    </th>
                                                    <th>
                                                        Jumlah
                                                        <span id="2" style="color:red;display:none;"> *</span>
                                                        <span id="jumlah" style="color:red;display:none;">harus diisi</span>
                                                    </th>
                                                    <th>
                                                        Satuan
                                                        <span id="3" style="color:red;display:none;"> *</span>
                                                        <span id="satuan" style="color:red;display:none;">harus diisi</span>
                                                    </th>
                                                    <th>Aksi</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                    <button type="submit" name="submitButton" value="submit" class="btn btn-primary mr-2 submit-button">Simpan</button>
                                    <a asp-controller="Pasien" asp-action="Index" class="btn btn-light">Kembali</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        //surat izin
        $("#printPdf").click(function () {
            downloadSuratIzin();
        });

        function setSuratIzinText() {
            // Mendapatkan nilai dari field-field yang ada di form
            var namaPasien = $("#anm_nama_pasien").val() || '';
            var prodiDepartemen = $("#anm_prodi_atau_departemen").val() || '';
            var idPasien = $("#anm_id_pasien").val() || '';
            var diagnosa = $("#anm_diagnosa").val() || '';

            // Mendapatkan tanggal saat ini dan formatnya ke "dd/MMM/yyyy"
            var today = new Date();
            var options = { day: '2-digit', month: 'short', year: 'numeric' };
            var tanggalSurat = today.toLocaleDateString('id-ID', options); // Format tanggal

            document.getElementById('tanggalSurat').textContent = "Cikarang: " + tanggalSurat;

            // Generate teks untuk dimasukkan ke dalam modal-body
            var modalText = `<p style="color: black;">Nama:      ${namaPasien}</p>
                                <p style="color: black;">Dept/Prodi/UPT:     ${prodiDepartemen}</p>
                                <p style="color: black;">NRP/NIM:     ${idPasien}</p>
                                <br>
                                <p style="color: black;"><b>Hasil Pemersiksaan :</b></p>
                                <p style="color: black;">Mengalami gejala ${diagnosa}</p>
                                <br>
                                <br>
                                <p style="color: black;">Setelah dilakukan pemeriksaan Pasien disarankan untuk pulang dan istirahat</p>
                                <p style="color: black;">Selama (Satu) Hari</p>
                                <br>
                                <p style="color: black;">Demikian hasil pemeriksaan ini dibuat untuk dapat digunakan sebagaimana mestinya</p>
                                <div class="tanggal-surat-wrapper">
                                    <p id="tanggalSurat" style="text-align: left; margin-right: 80px; color: black;">Cikarang: ${tanggalSurat}</p>
                                </div>
                                <br>
                                <div class="logo-container">
                                    <img src="/content/images/Tanda_tangan.jpg" alt="logo" id="tandaTanganImage" style="display: flex;justify-content: center;width: 96px;"/>
                                </div>
                                <p style="color: black;">Dina Yuliana Amd.Keb</p>
                                <br>
                                <br>
                                <br>
                                <br>
                                <br>
                                <br>
                                <br>
                                <br>
                                <br>
                                <br>`;

            // Mengganti isi dari modal-body dengan teks yang telah disiapkan
            $('.modal-body').html(modalText);
        }
        //end surat izin

        //submit form & validate
        $(".submit-button").click(function (e) {
            e.preventDefault(); // Mencegah pengiriman formulir secara default

            if (validateForm()) {
                Swal.fire({
                    title: "Buat Surat izin?",
                    text: "perlu buat surat izin atau input rujukan?",
                    icon: "question",
                    confirmButtonText: "Surat Izin",
                    showDenyButton: true,
                    denyButtonText: "Tidak",
                    showCancelButton: true, // Mengganti showCancleButton dengan showCancelButton
                    cancelButtonText: "Rujukan", // Mengganti denyCancleText dengan cancelButtonText
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Jika "Iya" diklik, tampilkan modal
                        setSuratIzinText();
                        $('#myModal').modal('show');
                    } else if (result.isDenied) {
                        $('form').append('<input type="hidden" name="submitButton" value="submit" />');
                        $('form').submit();
                    } else {
                        // Set nilai pada input submitButton untuk menunjukkan rujukan
                        $('form').append('<input type="hidden" name="submitButton" value="rujukan" />');
                        // Izinkan submit setelah keputusan dari alert Swal diambil
                        $('form').submit();
                    }
                });
            }
        });

        $("#myModal").on("hidden.bs.modal", function () {
            // Jika modal ditutup, lanjutkan menyimpan data
            $('form').append('<input type="hidden" name="submitButton" value="submit" />');
            $('form').submit();
        });

        function validateForm() {
            document.getElementById('id_pasien').style.display = 'none';
            document.getElementById('nama_pasien').style.display = 'none';
            document.getElementById('prodi_atau_departemen').style.display = 'none';
            document.getElementById('keluhan').style.display = 'none';
            document.getElementById('diagnosa').style.display = 'none';

            // Check username
            var anm_id_pasien = document.getElementById('anm_id_pasien').value;
            var anm_nama_pasien = document.getElementById('anm_nama_pasien').value;
            var anm_prodi_atau_departemen = document.getElementById('anm_prodi_atau_departemen').value;
            var anm_keluhan = document.getElementById('anm_keluhan').value;
            var anm_diagnosa = document.getElementById('anm_diagnosa').value;

            if (!anm_id_pasien.trim()) {
                document.getElementById('id_pasien').style.display = 'inline';
            }
            if (!anm_nama_pasien.trim()) {
                document.getElementById('nama_pasien').textContent = 'harus diisi';
                document.getElementById('nama_pasien').style.display = 'inline';
            }
            if (!anm_prodi_atau_departemen.trim()) {
                document.getElementById('prodi_atau_departemen').style.display = 'inline';
            }
            if (!anm_keluhan.trim()) {
                document.getElementById('keluhan').style.display = 'inline';
            }
            if (!anm_diagnosa.trim()) {
                document.getElementById('diagnosa').style.display = 'inline';
            }
            if (!/^\d+$/.test(anm_id_pasien)) {
                // Jika terdapat angka dalam akn_nama
                document.getElementById('id_pasien').textContent = 'NIM/NPK tidak boleh berupa huruf';
                document.getElementById('id_pasien').style.display = 'inline';
                return false;
            }
            if (/\d/.test(anm_nama_pasien)) {
                // Jika terdapat angka dalam akn_nama
                document.getElementById('nama_pasien').textContent = 'nama tidak boleh berupa angka';
                document.getElementById('nama_pasien').style.display = 'inline';
                return false;
            }

            // Ganti dengan nama kolom yang sesuai
            var requiredFields = ["anm_id_pasien", "anm_nama_pasien", "anm_prodi_atau_departemen", "anm_keluhan", "anm_diagnosa", "anm_prodi_atau_departemen"];

            // Array untuk menyimpan pesan kesalahan obat
            var obatErrors = [];

            for (var i = 0; i < requiredFields.length; i++) {
                var field = requiredFields[i];
                var value = $("#" + field).val();
                if (!value) {
                    Swal.fire("Gagal!", "Isi data dengan lengkap!", "warning");
                    return false;
                }
            }

            // Validasi obat
            var obatRows = $("#tblPemakaianObat tbody tr");
            obatRows.each(function (index, row) {
                var namaObat = $(row).find("select[name$='pmo_id_obat']").val();
                var jumlah = $(row).find("input[name$='pmo_jumlah']").val();
                var satuan = $(row).find("input[name$='pmo_satuan']").val();

                document.getElementById('nama_obat').style.display = 'none';
                document.getElementById('jumlah').style.display = 'none';
                document.getElementById('satuan').style.display = 'none';

                if (!namaObat || !jumlah || !satuan || jumlah < 0) {
                    obatErrors.push("Isi data obat dengan lengkap pada baris " + (index + 1));

                    if (!namaObat) {
                        document.getElementById('nama_obat').style.display = 'inline';
                    }
                    if (!jumlah) {
                        document.getElementById('jumlah').style.display = 'inline';
                    }
                    if (jumlah < 0) {
                        document.getElementById('jumlah').textContent = 'jumlah tidak valid';
                        document.getElementById('jumlah').style.display = 'inline';
                    }
                    if (!satuan) {
                        document.getElementById('satuan').style.display = 'inline';
                    }
                }
            });

            // Menampilkan pesan kesalahan obat jika ada
            if (obatErrors.length > 0) {
                return false;
            }

            return true;
        }
        //end submit form validate

        //pemakaian obat
        // Fungsi untuk memperbarui jumlah baris
        function updateRowCount() {
            var rowCount = $("#tblPemakaianObat tbody tr").length;
            return rowCount;
        }

        var index = 0;

        $("#tblPemakaianObat").on("blur", "input, select", function () {
            document.getElementById('nama_obat').style.display = 'none';
            document.getElementById('jumlah').style.display = 'none';
            document.getElementById('satuan').style.display = 'none';

            var namaObatError = document.getElementById('nama_obat');
            var jumlahError = document.getElementById('jumlah');
            var satuanError = document.getElementById('satuan');

            var obatRows = $("#tblPemakaianObat tbody tr");
            var hasError = false;

            obatRows.each(function (i, row) {
                var namaObat = $(row).find("select[name$='pmo_id_obat']").val();
                var jumlah = $(row).find("input[name$='pmo_jumlah']").val();
                var satuan = $(row).find("input[name$='pmo_satuan']").val();

                if (!namaObat) {
                    namaObatError.textContent = 'harus diisi';
                    namaObatError.style.display = 'inline';
                    hasError = true;
                } else {
                    namaObatError.style.display = 'none';
                }

                if (!jumlah) {
                    jumlahError.textContent = 'harus diisi';
                    jumlahError.style.display = 'inline';
                    hasError = true;
                } else if (jumlah < 0) {
                    jumlahError.textContent = 'jumlah tidak valid';
                    jumlahError.style.display = 'inline';
                    hasError = true;
                } else {
                    jumlahError.style.display = 'none';
                }
            });

            return !hasError;
        });

        var satuanData = {}; // Objek untuk menyimpan data satuan obat

        @foreach (var obat in Model.Obats)
        {
            <text>
                    satuanData['@Html.Raw(obat.obt_id)'] = '@Html.Raw(obat.obt_satuan)';
            </text>
        }

         $("#tblPemakaianObat").on("change", "select", function () {
             var selectedObatId = $(this).val(); // Mendapatkan nilai obat yang dipilih dari dropdown
            var satuanField = $(this).closest("tr").find("input[name$='pmo_satuan']"); // Mendapatkan elemen input satuan di baris yang sama

            // Set nilai satuanField dengan satuan obat yang sesuai
            satuanField.val(satuanData[selectedObatId]);
         });

        $("#btnTambahBaris").click(function () {
            var newRow = $("<tr>");
            var cols = "";

            cols += '<td><select name="PemakaianObats[' + index + '].pmo_id_obat" class="form-control form-control-lg" />' +
                '<option value="" selected disabled>Pilih Obat</option>';
            @foreach (var obat in Model.Obats)
            {
                // Escape Razor syntax properly within JavaScript string
                @:cols += '<option value="@Html.Raw(obat.obt_id)">@Html.Raw(obat.obt_nama_obat)</option>';
            }
                cols += '</select></td>'; // Perbaiki di sini, tambahkan penutup tag </select>

            cols += '<td><input name="PemakaianObats[' + index + '].pmo_jumlah" class="form-control" type="number" /></td>';
            cols += '<td><input name="PemakaianObats[' + index + '].pmo_satuan" class="form-control" type="text" readonly /></td>';

            cols += '<td>';
            cols += '<input name="PemakaianObats[' + index + '].pmo_id_anamnesa" class="form-control input-with-border" value="null" hidden />';
            cols += '<button type="button" class="btnHapusBaris btn btn-danger">Hapus</button>';
            cols += '</td>';

            newRow.append(cols);
            $("#tblPemakaianObat tbody").append(newRow);

            index++;
            var baris = updateRowCount(); // Panggil fungsi untuk memperbarui jumlah baris

            if (baris > 0) {
                var Error1 = document.getElementById('1');
                Error1.style.display = 'inline';
                var Error2 = document.getElementById('2');
                Error2.style.display = 'inline';
                var Error3 = document.getElementById('3');
                Error3.style.display = 'inline';
            }
        });

        $("#tblPemakaianObat").on("click", ".btnHapusBaris", function () {
            $(this).closest("tr").remove();
            var baris = updateRowCount(); // Panggil fungsi untuk memperbarui jumlah baris
            if(baris < 1) {
                var Error1 = document.getElementById('1');
                Error1.style.display = 'none';
                var Error2 = document.getElementById('2');
                Error2.style.display = 'none';
                var Error3 = document.getElementById('3');
                Error3.style.display = 'none';

