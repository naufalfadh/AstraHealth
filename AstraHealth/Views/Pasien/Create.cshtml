@model AstraHealth.Models.PasienModel

@{
    ViewData["Title"] = "Anamnesa Pasien";
}
@{
    var httpContext = ViewContext.HttpContext;
}

<style>
    .input-with-border {
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .card {
        padding-left: 50px;
        padding-right: 50px;
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .card-body {
        background-color: #f0f0f0;
        padding: 20px;
        border-radius: 8px;
    }
</style>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div id="parentDiv">
                <div class="modal-header">
                    <div class="logo-container" style="display: flex;justify-content: center;width: 96px;">
                        <img src="~/content/images/IMG_Logo.png" alt="logo" style="display: flex;justify-content: center;width: 96px;" />
                    </div>
                    <div class="title-wrapper" style="text-align: center">
                        <h3 class="modal-title modal-lg" style="color: black;">SURAT KETERANGAN</h3>
                        <h3 class="modal-title modal-lg" style="color: black;">PEMERIKSAAN KESEHATAAN PASIEN</h3>
                    </div>
                    <div class="logo-container" style="display: flex;justify-content: center;width: 96px;">
                        <img src="~/content/images/IMG_Logo.png" alt="logo" style="display: flex;justify-content: center;width: 96px;" />
                    </div>
                </div>
                <div class="modal-body">
                    <p style="color: black;">Nama: </p>
                    <p style="color: black;">Dept/Prodi/UPT: </p>
                    <p style="color: black;">NRP/NIM: </p>
                    <br>
                    <p style="color: black;"><b>Hasil Pemersiksaan :</b></p>
                    <p style="color: black;">Mengalami gejala</p>
                    <br>
                    <br>
                    <p style="color: black;">Setelah dilakukan pemeriksaan Pasien disarankan untuk pulang dan istirahat</p>
                    <p style="color: black;">Selama (Satu) Hari</p>
                    <br>
                    <p style="color: black;">Demikian hasil pemeriksaan ini dibuat untuk dapat digunakan sebagaimana mestinya</p>
                    <div class="tanggal-surat-wrapper">
                        <p id="tanggalSurat" style="text-align: left; margin-right: 80px; color: black;">Cikarang: [Tanggal]</p>
                    </div>
                    <br>
                    <div class="logo-container" style="display: flex;justify-content: center;width: 96px;">
                        <img src="/content/images/Tanda_tangan.jpg" alt="logo" id="tandaTanganImage" style="display: flex;justify-content: center;width: 96px;" />
                    </div>
                    <p style="color: black;">Dina Yuliana Amd.Keb</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                <button type="button" class="btn btn-secondary" id="printPdf">Cetak</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal -->

