@model List<AstraHealth.Models.AkunModel>
@{
    ViewData["Title"] = "Akun";
    int no = 1;
}


<br>
<br>
<br>
<br>
<section class="section">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h2 >Akun</h2>
                                <hr />
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="row">
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <i class="bi bi-check-circle me-1"></i>
                                            <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    </div>
                                }
                                <a class="btn btn-primary" asp-action="Create">Tambah Akun</a>
                                <hr />
                                <table class="table datatable table-bordered" id="myTable">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">NPK</th>
                                            <th scope="col">Nama</th>
                                            <th scope="col">Role</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Aksi</th>
                                        </tr>
                                    </thead>
                                    `
                                    <tbody>
                                        @foreach (var akun in Model)
                                        {
                                            <tr>
                                                <td>@(no++)</td>
                                                <td>@akun.akn_id</td>
                                                <td>@akun.akn_nama</td>
                                                <td>@akun.akn_role</td>
                                                @if (akun.akn_status == "tidak aktif")
                                                {
                                                    <td><label class="badge badge-danger">@akun.akn_status</label></td>
                                                }
                                                @if (akun.akn_status == "aktif")
                                                {
                                                    <td><label class="badge badge-success">@akun.akn_status</label></td>
                                                }
                                                <td>
                                                    <button class="btn btn-sm btn-danger delete-button" data-id="@akun.akn_id">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                    <a asp-controller="akun" asp-action="Edit" asp-route-id="@akun.akn_id" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Indonesian.json"
            }
        });
    });

    $(document).ready(function () {
        $(".delete-button").click(function () {
            var akunId = $(this).data("id");

            Swal.fire({
                title: "Hapus akun?",
                text: "Apakah anda yakin ingin menghapus akun ini?",
                icon: "warning",
                confirmButtonText: "Iya",
                showDenyButton: true,
                denyButtonText: "Tidak",
                dangerMode: true,
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/akun/Delete/" + akunId, // Perbaiki URL dengan menambahkan tanda "/"
                        type: "POST",
                        success: function (data) {
                            if (data.success) {
                                Swal.fire("Sukses!", data.message, "success").then(() => {
                                    // Refresh halaman setelah pengguna menekan tombol "OK"
                                    location.reload();
                                });
                            } else {
                                Swal.fire("Gagal!", data.message, "error");
                            }
                        },
                        error: function () {
                            swal("Error", "Terjadi kesalahan saat menghapus akun.", "error");
                        }
                    });
                }
            });
        });
    });
</script>
