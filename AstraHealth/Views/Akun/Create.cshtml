@model AstraHealth.Models.AkunModel

@{
    ViewData["Title"] = "Tambah Akun";
}

<div class="pagetitle">
    <h1>Master Akun</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Master AKun</li>
            <li class="breadcrumb-item active">Tambah Akun</li>
        </ol>
    </nav>
</div>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tambah Akun Baru</h4>
            <p class="card-description">
                Registrasi Akun
            </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="akn_id">NPK</label>
                    <input asp-for="akn_id" type="text" class="form-control" placeholder="NPK">
                    <span asp-validation-for="akn_id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="akn_nama">Nama</label>
                    <input asp-for="akn_nama" type="text" class="form-control" placeholder="Nama">
                    <span asp-validation-for="akn_nama" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="akn_password">Password</label>
                    <input asp-for="akn_password" type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="akn_password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="akn_role">Role</label>
                    <select asp-for="akn_role" class="form-control">
                        <option value="" disabled selected>Pilih role</option>
                        <option value="admin">admin</option>
                        <option value="manajer">manajer</option>
                    </select>
                    <span asp-validation-for="akn_role" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="akn_status" type="text" class="form-control" placeholder="Status" value="aktif" hidden>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Simpan</button>
                <button class="btn btn-light">Kembali</button>
            </form>
        </div>
    </div>
</div>