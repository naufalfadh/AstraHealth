@model AstraHealth.Models.AkunModel
@{
    ViewData["Title"] = "Edit Akun";
}

<style>
    .card {
        padding-left: 50px; /* Sesuaikan dengan jumlah padding yang diinginkan */
        padding-right: 50px; /* Sesuaikan dengan jumlah padding yang diinginkan */
    }

    .card-body {
        background-color: #f0f0f0; /* Ganti dengan warna yang diinginkan */
        padding: 20px; /* Sesuaikan dengan jumlah padding yang diinginkan */
        border-radius: 8px; /* Bordes sudut */
    }
</style>
<div class="content">
    <div class="contrainer-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Edit Akun</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Akun" asp-action="Edit">
                            <div class="form-group">
                                <label asp-for="akn_id" class="control-label">NPK</label>
                                <input asp-for="akn_id" class="form-control" readonly/>
                                <span asp-validation-for="akn_id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="akn_nama" class="control-label">Nama</label>
                                <input asp-for="akn_nama" class="form-control" />
                                <span asp-validation-for="akn_nama" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="akn_password" class="control-label">Password</label>
                                <input asp-for="akn_password" type="password" class="form-control" id="password" />
                                <div class="form-group-append">
                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="akn_password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="akn_role">Role</label>
                                <select asp-for="akn_role" class="form-control">
                                    <option value="admin">admin</option>
                                    <option value="manajer">manajer</option>
                                </select>
                                <span asp-validation-for="akn_role" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="akn_status" type="text" class="form-control" placeholder="Status" value="aktif" hidden>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Set the password input value using JavaScript
    document.getElementById('password').value = '@Model.akn_password';

    function togglePassword() {
        var input = document.getElementById('password');
        var type = input.type === 'password' ? 'text' : 'password';
        input.type = type;
    }
</script>